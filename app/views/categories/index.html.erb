<h1 align="center">Listing All Categories</h1>

<div align="center">
<%= will_paginate %>
<% @categories.each do |category| %>

<ul class="listing"  style="list-style: none; padding-left: 0;">

<div class="row">

<div class="well col-md-4 col-md-offset-4">

<li class="article-title"  style="font-weight: bold; font-size: 1.5em;">

<%= link_to "#{category.name}", category_path(category) %>

</li>
<li><small><%= pluralize(category.articles.count, "article") %></small></li>
</div>

</div>

</ul>

<% end %>
<%= will_paginate %>
</div>